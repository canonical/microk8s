#!/bin/bash

export PATH="$SNAP/usr/sbin:$SNAP/usr/bin:$SNAP/sbin:$SNAP/bin:$PATH"
ARCH="$($SNAP/bin/uname -m)"
export LD_LIBRARY_PATH="$SNAP/lib:$SNAP/usr/lib:$SNAP/lib/$ARCH-linux-gnu:$SNAP/usr/lib/$ARCH-linux-gnu"

set -a
if [ -e "${SNAP_DATA}/args/fips-env" ]
then
  . "${SNAP_DATA}/args/fips-env"
fi
set +a

if [[ ! -v OPENSSL_EXECUTABLE ]]
then
  export OPENSSL_CONF="${SNAP}/etc/ssl/openssl.cnf"
  ${SNAP}/usr/bin/openssl "$@"
else
  exec "${OPENSSL_EXECUTABLE}" "$@"
fi
