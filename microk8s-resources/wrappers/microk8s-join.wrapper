#!/usr/bin/env bash

set -eu

source $SNAP/actions/common/utils.sh

use_snap_env

if [ -d "$SNAP_COMMON/default-storage" ]
then
  echo "WARNING: Hostpath storage is enabled and is not suitable for multi node clusters."
  echo ""
fi

exit_if_no_permissions

if is_strict
then
  ${SNAP}/usr/bin/python3 ${SNAP}/scripts/wrappers/join.py "${@}"
else
  sudo -E ${SNAP}/usr/bin/python3 ${SNAP}/scripts/wrappers/join.py "${@}"
fi
