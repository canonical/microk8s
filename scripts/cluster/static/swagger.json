      "post": {
        "tags": [
          "MicroK8s"
        ],
        "summary": "Returns the installed version of MicroK8s",

        "requestBody": {
          "description": "Provide the token saved in callback-token file",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/callback"
              }
            }
          }
        },
        "produces": [
          "text/plain; charset=utf-8"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request."
          }
        }
      }
